<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F3F3"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_catalod_titlename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Home Wised"
                android:textSize="15dp"
                android:textStyle="bold"
                android:typeface="sans" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Description:"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/text_catdetail_product_dc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Air Filter"
                    android:textSize="15dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_catdetails_price"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"

                android:layout_marginTop="10dp"
                android:background="@drawable/button_all_round"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="Price  :  $15.99"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_catdetails_lenght"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_all_round"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="Length  : 0mm"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_catdetails_width"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_all_round"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="Width  : 14mm"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_catdetails_hight"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_all_round"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="Hight  : 0mm"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_catdetails_brandname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_all_round"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="Brand Name  : GE"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_catdetails_serialnumber"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_all_round"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="Serial Number : WAP204090"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_catdetails_airfiltername"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_all_round"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="Air Filter"
                android:textSize="15dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_editproduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/all_buttons_bluecolor"
                android:gravity="center"
                android:text="Edit Product"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                android:typeface="sans" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>